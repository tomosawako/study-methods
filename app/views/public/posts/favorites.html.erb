<h4 class="text-center my-5">
  <%= @enduser.name %>さんのお気に入り投稿一覧
</h4>
<div class="card-list container">
  <div class-"d-flex row">
    <div class="col-sm-3">
      <!--- カテゴリ(科目・資格検索) -->
      <%= render 'search_category', categories: @categories %>
    </div>
    <div class="col-sm-9">
      <% if @favorite_list.present? %>
        <% @favorite_list.each do |favorite| %>
        <div class="card border-warning w-100 mx-auto mt-4 shadow-lg p-3">
          <%= link_to post_path(favorite.id) do %>
          <% image_tag favorite.get_image %>
          <% end %>
        <div class="card-body">
          <h5 class="card-title">
            <b>科目・資格名</b>: <%= favorite.category.name %>
          </h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <b>分野</b>: <%= favorite.field %>
          </li>
          <li class="list-group-item">
            <b>参考書・アプリ</b>: <%= favorite.reference_book %>
          </li>
          <li class="list-group-item">
            <b>勉強方法</b>: <%= favorite.study_method %>
          </li>
          <li class="list-group-item">
            <b>総学習時間</b>: <%= favorite.total_study_time %>時間
          </li>
          <li class="list-group-item">
            <b>成果</b>: <%= favorite.achievement %>
          </li>
        </ul>
        <div class="card-body">
          <div class="row">
            <div class="col-sm-2">
              <%= image_tag favorite.enduser.get_profile_image(80,80), class:"rounded-circle" %>
            </div>
            <div class="col-sm-10">
              <%= link_to enduser_path(favorite.enduser.id) do %>
              <span><i class="fas fa-user"></i> By <%= favorite.enduser.name %> | </span>
              <% end %>
              <span><%= favorite.created_at.strftime('%Y/%m/%d') %> |</span>
              <span>
                <%= link_to post_path(favorite.id) do %>
                <i class="fa-regular fa-comment-dots"></i>
                <%= favorite.post_comments.count %> |
                <% end %>
              </span>
              <% if favorite.favorited_by?(current_enduser) %>
                <%= link_to post_favorite_path(favorite), method: :delete do %>
                <i class="fa-regular fa-heart"></i> <%= favorite.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to post_favorite_path(favorite), method: :post do %>
                <i class="fa-regular fa-heart"></i> <%= favorite.favorites.count %>
                <% end %>
              <% end %>
            </div>
          </div>
          <P class="mt-2"><%= link_to "#{favorite.post_comments.count}件コメント", post_path(favorite.id) %></P>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>