<div class="container">
  <h3 class="text-center my-5"><%= @enduser.name %>さんのユーザー情報編集</h3>
  <%= form_with model: @enduser, url: admin_enduser_path, method: :patch do |f| %>
  <div class="form-group row">
    <div class="col-sm-2"></div>
    <%= f.label :enduser_id, "ユーザーID",class:"col-sm-2 control-label" %>
　  <div class="col-sm-4">
　    <%= @enduser.id %>
　  </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2"></div>
    <%= f.label :name, "ユーザー名",class:"col-sm-2 control-label" %>
　  <div class="col-sm-4">
　    <%= f.text_field :name, class:"form-control"  %>
  　</div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2"></div>
    <%= f.label :eamil, "メールアドレス",class:"col-sm-2 control-label" %>
　  <div class="col-sm-7">
　    <%= f.email_field :email, class:"form-control"   %>
  　</div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2"></div>
      <%= f.label :status, "ステータス",class:"col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.radio_button :is_active, true, class:"ml-4" %>
      <%= f.label :is_active, "有効" %>
      <%= f.radio_button :is_active, false, class:"ml-2" %>
      <%= f.label :is_active, "利用停止" %>
    </div>
  </div>
    <div class="form-group row">
      <div class="col-sm-5"></div>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
